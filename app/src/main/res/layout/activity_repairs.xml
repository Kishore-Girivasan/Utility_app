<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Repairs"
    android:background="@drawable/repairs_pg">
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/ic_baseline_arrow_back_24"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="320dp"
        android:layout_marginStart="-30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="15dp"
                android:background="@drawable/ac_new"
                android:id="@+id/ac"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="15dp"
                android:id="@+id/fridge"
                android:background="@drawable/fridge"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="15dp"
                android:id="@+id/wm"
                android:background="@drawable/wm"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="15dp"
                android:id="@+id/tv"
                android:background="@drawable/tv"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="15dp"
                android:id="@+id/chimney"
                android:background="@drawable/chimney"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="15dp"
                android:id="@+id/laptop"
                android:background="@drawable/laptop"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="15dp"
                android:id="@+id/heater"
                android:background="@drawable/heater"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="15dp"
                android:id="@+id/purifier"
                android:background="@drawable/purifier"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="15dp"
                android:id="@+id/microwave"
                android:background="@drawable/microwave"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
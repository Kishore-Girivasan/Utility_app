<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".Mainpage"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#2d185c"
        android:id="@+id/location_set"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/inria_sans_bold"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Your Location"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/profile_photo"
        android:layout_marginTop="25dp"
        android:layout_marginStart="115dp"
        android:background="@drawable/profile"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.SearchView
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:queryHint="Search for your services"
            android:background="@drawable/search_view_bg"
            app:iconifiedByDefault="false"
            android:id="@+id/search_view"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/search"
            android:id="@+id/search"
            />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="#D5F4F9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:background="#D5F4F9">
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                app:cardCornerRadius="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/ac">
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                app:cardCornerRadius="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/big_home_rush">
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="25dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/saloon">
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="25dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/spa">
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="25dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/spotless_finish">
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categories"
                android:textColor="#2D185C"
                android:fontFamily="@font/inria_sans_bold"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/driver"
                    android:id="@+id/driver"/>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="15dp"
                    android:id="@+id/cleaning"
                    android:background="@drawable/cleaning"/>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="15dp"
                    android:id="@+id/laundry"
                    android:background="@drawable/laundry"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="15dp"
                    android:id="@+id/repairs"
                    android:background="@drawable/repairs"/>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="15dp"
                    android:id="@+id/painting"
                    android:background="@drawable/painting"/>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="15dp"
                    android:id="@+id/pest"
                    android:background="@drawable/pest"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="140dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="fill"
                app:cardCornerRadius="13dp">
                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="140dp"
                    android:background="@drawable/bathroom">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="140dp"
                app:cardCornerRadius="13dp"
                android:layout_gravity="fill"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="140dp"
                    android:background="@drawable/home_soln">
                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_gravity="bottom"
        app:itemIconTint="#2D185C"
        app:itemTextColor="#2D185C"
        android:background="#D5F4F9"
        app:menu="@menu/bottom_nav_menu"
        />
</LinearLayout>